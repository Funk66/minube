# vim: set ft=dosini:

[DEFAULT]
backend           = auto
bantime           = 1h
bantime.increment = true
bantime.factor    = 24
bantime.maxtime   = 5w
findtime          = 24h
filter            = %(__name__)s
maxretry          = 1
port              = http,https
ignoreip          = 10.10.10.0/26

[sshd]
enabled = true
port    = ssh
chain   = INPUT
logpath = /remotelogs/auth.log
backend = auto

[caddy]
enabled   = true
chain     = FORWARD
logpath   = /remotelogs/caddy/*.log
